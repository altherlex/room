</pre>

<script>
function test_parametrize(){
  $.ajax({
    method: "GET",
    url: "crawler.text",
    beforeSend: function(){$("#modal-overlay").show();},
    complete: function(){$("#modal-overlay").hide();},
  })
  .done(function( str_msg ) {
    //console.log(a = str_msg);
    //$("#result").html( jQuery.parseJSON(msg.links) );
    $("#result").html(str_msg);
    $('#test').text("Tested");
  });
};
</script>
