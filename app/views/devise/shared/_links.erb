<% arr_links = []%>
<%- if controller_name != 'sessions' %>
  <% arr_links << (link_to "Sign in", new_session_path(resource_name)) %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <% arr_links << (link_to "Create an account", new_registration_path(resource_name)) %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <% arr_links << (link_to "Forgot your password?", new_password_path(resource_name)) %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <% arr_links << (link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)) %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <% arr_links << (link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)) %>
<% end -%>
<p><%= arr_links.join(' | ').html_safe %></p>
